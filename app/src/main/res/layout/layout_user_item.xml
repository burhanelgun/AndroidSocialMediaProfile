<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/sampleProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.challange3.presentation.customviews.CustomImageView
            android:id="@+id/userImageF"
            android:layout_width="52dp"
            android:layout_height="53dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/dogaimage" />

        <TextView
            android:id="@+id/userNameF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/userImageF"
            android:text="User1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/followersCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userNameF"
            android:layout_alignLeft="@+id/userNameF"
            android:layout_marginTop="5dp"
            android:text="999 followers" />


        <TextView
            android:id="@+id/followDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="23dp"
            android:text="999 months ago"
            tools:textColor="@android:color/holo_blue_dark" />

    </RelativeLayout>

</RelativeLayout>



